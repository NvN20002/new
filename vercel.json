{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/build"
        }
      },
      {
        "src": "backend/app.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/app.js"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/build/$1"
      }
    ],
    "env": {
      "MONGO_URI": "mongodb+srv://VCC:1234@cluster.3ivou.mongodb.net/?retryWrites=true&w=majority"
    }
  }
  